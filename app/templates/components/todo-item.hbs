<li>
  {{#if isEditing}}
    <label>
      <input
        id="edit-input"
        type="text"
        value={{editingText}}
        onblur={{action "closeEdit"}}
        oninput={{action "editing"}}
        onkeydown={{action "onkeydown"}}>
    </label>
  {{else}}
    <label>
      <input
        type="checkbox"
        value=todo.isCompleted
        onclick={{action "toggleComplete"}}>
    </label>
    <a
      role="button"
      class="{{if todo.isCompleted "completed"}}"
      onclick={{action "handleClickText"}}>
      {{todo.text}}
    </a>
  {{/if}}
</li>